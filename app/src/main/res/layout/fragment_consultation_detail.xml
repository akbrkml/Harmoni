<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harmoni.harmonikeluarga.ui.fragment.consultation.ConsultationDetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="ADA APA "
                android:textColor="@color/new_magenta"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:text="Terjawab"
                    android:textColor="@color/new_green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/strip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:text=" - "
                    android:textColor="#313131" />

                <TextView
                    android:id="@id/date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:layout_marginTop="1dp"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:text="Minggu, 20 Nov 2016 | 17:00"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="@string/lorem"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Nama Anak  " />

                <TextView
                    android:id="@+id/space1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tag1"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tag1"
                    android:text=":" />

                <TextView
                    android:id="@+id/namaAnak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tag1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/space1"
                    android:text="Ryan N.R."
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/umurAnak"
                    android:layout_marginRight="10dp"
                    android:text="Umur Anak" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/space1"
                    android:layout_alignTop="@+id/umurAnak"
                    android:layout_marginRight="10dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/umurAnak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/namaAnak"
                    android:layout_below="@+id/namaAnak"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:text="Pustaka Media"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/pendidikan"
                    android:layout_marginRight="10dp"
                    android:text="Pendidikan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/space1"
                    android:layout_alignTop="@+id/pendidikan"
                    android:layout_marginRight="10dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/pendidikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/namaAnak"
                    android:layout_below="@+id/umurAnak"
                    android:layout_marginRight="10dp"
                    android:text="2015"
                    android:textColor="#000000" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bgAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jawaban : "
                    android:textColor="@color/new_blue_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/answerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="@string/lorem"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bgAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/new_magenta"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/buttonPlayPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:padding="10dp" />

                <SeekBar
                    android:id="@+id/seekBarProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
