<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bgHome1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_beranda"
                    android:contentDescription="menu beranda"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/home_foot_beranda"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/beranda_opsi_1"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bgHome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_tanyaahli"
                    android:contentDescription="menu ahli"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/b"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/home_foot_ahli"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/beranda_opsi_2"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bgHome3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_events"
                    android:contentDescription="menu event"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/home_foot_events"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/beranda_opsi_3"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bgHome5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_events"
                    android:contentDescription="menu event"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/e"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/home_foot_events"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/beranda_opsi_5"
                    android:textColor="#ffffff" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bgHome4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_pustaka"
                    android:contentDescription="menu pustaka"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/d"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/home_foot_pustaka"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/beranda_opsi_4"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
