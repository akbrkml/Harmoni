<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                app:civ_border_color="@color/new_pink"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="3.0"
                android:id="@+id/img"
                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_width="80dp" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameUser"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:text="Ryan N.R"
                    android:textColor="@color/new_blue_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/winnerTitle"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:shadowColor="#e2000000"
                    android:shadowRadius="4.0"
                    android:text="JUARA 1"
                    android:textColor="@color/new_gold"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/winner_desc"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Hadiah 1 unit mobil Toyota Fortuner" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>