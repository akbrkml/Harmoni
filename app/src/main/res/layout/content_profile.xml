<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_light_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        android:id="@+id/top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_profile"
                android:background="@drawable/bt_profiletab_left"
                android:text="PROFIL ANDA"
                android:textColor="@drawable/bt_profiletab_text"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_width="wrap_content" />

            <View
                android:background="#000000"
                android:layout_height="match_parent"
                android:layout_width="1dp" />

            <Button
                android:id="@+id/btn_anak"
                android:background="@drawable/bt_profiletab_left"
                android:text="PROFIL ANAK"
                android:textColor="@drawable/bt_profiletab_text"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_width="wrap_content" />

            <View
                android:background="#000000"
                android:layout_height="match_parent"
                android:layout_width="1dp" />

            <Button
                android:id="@+id/btn_topik"
                android:background="@drawable/bt_profiletab_left"
                android:text="TOPIK"
                android:textColor="@drawable/bt_profiletab_text"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_width="wrap_content" />

            <View
                android:background="#000000"
                android:layout_height="match_parent"
                android:layout_width="1dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/container"
        android:background="@color/new_gray"
        android:layout_below="@id/top"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />

</RelativeLayout>